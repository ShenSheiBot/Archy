{
  "name": "archy",
  "description": "Archy – Cross-platform floating window browser, inspired by Archytas's pigeon, the world's first flying automaton.",
  "productName": "Archy",
  "author": "ShenSheiBot",
  "version": "0.3.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "license": "MIT",
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.12.4",
    "bootstrap": "^5.3.7",
    "cross-fetch": "^4.1.0",
    "electron-pdf-window": "^1.0.0",
    "electron-updater": "^6.6.2",
    "font-awesome": "^4.7.0",
    "is-url": "^1.2.4",
    "lodash.debounce": "^4.0.8",
    "nprogress": "^0.2.0",
    "prop-types": "^15.8.1",
    "query-string": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "url-parse": "^1.5.10",
    "yargs": "^18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/post-build.js",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"yarn dev\" \"wait-on http://localhost:5173 && cross-env APP_URL=http://localhost:5173 electron .\"",
    "electron:build": "yarn build && electron-builder --mac",
    "test": "mocha"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "extends": null,
    "appId": "com.archy.app",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "copyright": "Copyright © 2018 Kamran Ahmed",
    "files": [
      "public/**/*",
      "build/**/*",
      "!build/public",
      "!public/archy.png",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.navigation",
      "icon": "public/img/icon.icns"
    },
    "linux": {
      "category": "Network",
      "target": [
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "public/img/icon.ico"
    },
    "fileAssociations": [
      {
        "name": "Document",
        "description": "Archy",
        "role": "Viewer",
        "ext": "html"
      }
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "popper.js": "^1.16.1",
    "sass": "^1.90.0",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^8.0.4"
  }
}
